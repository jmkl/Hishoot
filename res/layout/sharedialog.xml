<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background"
    android:orientation="vertical" >



    <ImageView
        android:id="@+id/hishoot_preview"
        android:layout_width="wrap_content"
        android:layout_height="300dip"
        android:adjustViewBounds="true" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Login" />
    <LinearLayout
        android:id="@+id/dashboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dashboard"
        android:weightSum="1" >

        <Button
            android:layout_weight=".333"
            android:id="@+id/share_fb"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/ic_pic"
            android:text="Post to Wall" />

        <Button
            android:layout_weight=".333"
            android:id="@+id/share_show"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/ic_pic"
            android:text="Share to Group" />
          <Button
            android:layout_weight=".333"
            android:id="@+id/share_apps"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/ic_pic"
            android:text="Share with" />
  </LinearLayout>

    <ListView
        android:background="@drawable/background"
        android:visibility="gone"
        android:id="@+id/gruplist"
        android:layout_width="200dp"
        android:layout_height="fill_parent" />

</RelativeLayout>